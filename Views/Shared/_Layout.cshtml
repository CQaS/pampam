<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InmobiliariaVaras</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <!-- Link para íconos -->

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/log.css" />
    <link rel="stylesheet" href="~/css/EditarPerfil.css" />


</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            @if (!User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <h6>Ingresa para ver el Menu!</h6>
                    </li>
                </ul>

            }
            else
            {
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Inmobiliaria Varas</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Inquilinos"
                                asp-action="Index">Inquilinos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Propietarios"
                                asp-action="Index">Propietarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Inmuebles"
                                asp-action="Index">Inmuebles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Contratos"
                                asp-action="Index">Contratos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pagos"
                                asp-action="Index">Pagos</a>
                            </li>
                            @if (User.IsInRole("Administrador"))

                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index"><span
                                            class=""></span> Usuarios</a>
                                </li>
                            }
                        </ul>
                        <div class="dropdown">
                            <a class="btn btn-primary dropdown-toggle text-light" href="#" role="button" id="userMenu"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-reference="parent"
                                data-display="static">
                                <span class="fa fa-home"></span> @User.Identity.Name
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item text-primary" asp-controller="Usuarios" asp-action="Index"><span
                                        class="fa fa-user"></span> Perfiles</a>
                                <a class="dropdown-item text-primary" asp-controller="Usuarios" asp-action="Logout"><i
                                        class="fas fa-sign-out-alt"></i><span class="fa fa-sign-out"></span> Salir</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </nav>
    </header>

    @if (!String.IsNullOrEmpty(ViewBag.Error))

    {
        <div class="alert alert-danger aler-dismissible fade show" role="alert">
            <strong>Informacion: </strong>@ViewBag.Error
            <button type="button" class="close" data-dismiss="alert" aria-label="cloce">
                <span arial-hidden="true"><span class="fa fa-radiation-alt"></span></span>
            </button>
        </div>
    }
    @if (!String.IsNullOrEmpty(ViewBag.Mensaje))

    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <strong>Información:</strong> @ViewBag.Mensaje
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true"><span class="lnr lnr-cross-circle"></span></span>
            </button>
        </div>
    }


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (User.Identity.IsAuthenticated)

    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - InmobiliariaVaras - Bienvenidos
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
