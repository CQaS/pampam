@model InmobiliariaVaras.Models.Pagos

@{
    ViewData["Title"] = "Pagar";
}

@if(!User.Identity.IsAuthenticated)
 {
     await Html.RenderPartialAsync("_Login", new LoginView());
 }
 else
 {
<h1>Pagar Contrato</h1>

<div class="container">
    <div>
        <form method="post" asp-action="Pagar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="contrato_id" value="@ViewBag.Contratos.id_Cont" />
            <div class="form-group">
                <label for="num_Pago" class="control-label">Nro. Pago siguiente:</label>
                <input type="text" class="form-control" id="num_Pago" name="num_Pago"
                value="@ViewBag.max" >
            </div>
            <div class="form-group">
                <label for="fecha" class="control-label">Fecha</label>
                <input type="date" class="form-control" id="fecha" name="fecha">
            </div>
            <div class="form-group">
                <label for="importe" class="control-label">Importe</label>
                <input type="text" class="form-control" id="importe" name="importe" value="@ViewBag.Contratos.valor" >
            </div>
            <br>
            <input type="submit" value="Confirmar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </form>
    </div>
</div>
 }